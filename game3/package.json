{
  "name": "multiplayer-games",
  "version": "1.0.0",
  "description": "React + Node.js 멀티플레이어 게임 (우노 & 반응속도)",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "dev:host": "concurrently \"npm run server\" \"npm run client:host\"",
    "server": "cd server && npm run dev",
    "client": "cd client && npm start",
    "client:host": "cd client && npm start -- --host",
    "install-all": "npm install && cd server && npm install && cd ../client && npm install",
    "build": "cd client && npm run build",
    "start": "cd server && npm start"
  },
  "keywords": [
    "react",
    "typescript",
    "nodejs",
    "socketio",
    "multiplayer",
    "games",
    "uno",
    "reaction"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}